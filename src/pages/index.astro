    />
  </Fragment>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Server yang Aman, Kinerja Terbaik"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Selengkapnya Tentang Kami', href: '/about' },
